              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"no_faktur\": \"PJ-2025-0001\",\n  \"customer\": \"Budi Santoso\",\n  \"user_id\": 1,\n  \"status\": \"completed\",\n  \"details\": [\n    { \"barang_id\": 1, \"qty\": 3, \"harga\": 65000 },\n    { \"barang_id\": 2, \"qty\": 1, \"harga\": 120000 }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/penjualan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "penjualan"]
            }
          }
        },
        {
          "name": "Get All Penjualan",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/penjualan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "penjualan"]
            }
          }
        },
        {
          "name": "Get Detail Penjualan",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/penjualan/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "penjualan", "1"]
            }
          }
        }
      ]
    }
  ]
}
